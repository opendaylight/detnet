<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.opendaylight.odlparent</groupId>
        <artifactId>odlparent-lite</artifactId>
        <version>6.0.4</version>
    <relativePath/>
  </parent>

  <groupId>org.opendaylight.detnet</groupId>
  <artifactId>detnet-aggregator</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <name>detnet</name> <!-- DO NOT CHANGE - Used by Sonar to set project name -->
  <packaging>pom</packaging>

  <scm>
    <connection>scm:git:ssh://git.opendaylight.org:29418/detnet.git</connection>
    <developerConnection>scm:git:ssh://git.opendaylight.org:29418/detnet.git</developerConnection>
    <tag>HEAD</tag>
    <url>https://wiki.opendaylight.org/view/detnet:Main</url>
  </scm>

  <modules>
    <module>common</module>
    <module>topology</module>
    <module>driver</module>
    <module>clock</module>
    <module>qos</module>
    <module>pce</module>
    <module>gate</module>
    <module>bandwidth</module>
    <module>detnet-service</module>
    <module>tsn-service</module>
    <module>e2e-service</module>
    <module>features</module>
    <module>karaf</module>
  </modules>

  <properties>
    <!-- DO NOT install or deploy the repo root pom as it's only needed to initiate a build -->
    <maven.deploy.skip>true</maven.deploy.skip>
    <maven.install.skip>true</maven.install.skip>
  </properties>

  <profiles>
    <profile>
      <id>sonar-jacoco-aggregate</id>
      <activation>
        <property>
          <name>odl.jacoco.aggregateFile</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>merge</id>
                <goals>
                  <goal>merge</goal>
                </goals>
                <phase>generate-resources</phase>
                <configuration>
                  <destFile>${odl.jacoco.aggregateFile}</destFile>
                  <fileSets>
                    <fileSet>
                      <directory>${project.basedir}</directory>
                      <includes>
                        <include>**/target/code-coverage/*.exec</include>
                      </includes>
                    </fileSet>
                  </fileSets>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
